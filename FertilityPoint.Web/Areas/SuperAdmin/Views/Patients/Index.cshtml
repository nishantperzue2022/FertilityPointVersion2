@model IEnumerable<FertilityPoint.DTO.PatientModule.PatientDTO>

@{
    ViewData["Title"] = "Index";

    Layout = "~/Areas/SuperAdmin/Views/Shared/_Layout.cshtml";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
<link href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet">


<body>
    <div class="page-wrapper" style="min-height: 754px;background-color: #f8f9fa;">
        <div class="content container-fluid">

            <div class="row">
                <div class="col-sm-3 col-auto">
                    <h3 class="page-title">List of Patients</h3>
                </div>
                <div class="col-md-9">
                    @*                    <button type="button" class="btn btn-success btn-sm  pull-right" data-toggle="modal" data-target="#modalTimeSlot" data-backdrop="static" data-keyboard="false"><i class="fa fa-plus-circle"></i>  </button>
                    *@
                </div>
            </div>

            <div class="card">
                <div class="card-body">

                    <table id="patients" class="table table-sm" cellspacing="0" style="width:100%">
                        <thead>
                            <tr>
                                <th>SN.</th>
                                <th>Name</th>
                                <th>Phone Number</th>
                                <th>Email</th>
                                <th>Member Since</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (Model != null && Model.Count() > 0)
                            {
                                int count = 1;
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@count</td>

                                        <td>@item.FullName</td>

                                        <td>@item.PhoneNumber</td>

                                        <td>@item.Email</td>

                                        <td>@item.CreateDate.ToShortDateString()</td>
                                        <td class="text-end">

                                            <a class="btn btn-success btn-sm " href="#" onclick="GetPatient('@item.Id')" value="">Edit</a>

                                            <a class="btn btn-sm btn-danger" href="#" onclick="DeleteRecord('@item.Id')" value="">Delete</a>

                                        </td>

                                    </tr>

                                    count++;
                                }
                            }

                        </tbody>

                    </table>


                </div>
            </div>
        </div>

    </div>



</body>






<div class="modal fade" id="modalUpdatePatient" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update Patient Information</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmUpdatePatient">

                    <input type="text" class="form-control" name="Id" id="txtId">

                    <div class="row form-row">
                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label>First Name</label>
                                <input type="text" class="form-control" name="FirstName" id="txtFirstName">
                            </div>
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label>Last Name</label>
                                <input type="text" class="form-control" name="LastName" id="txtLastName">
                            </div>
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label>PhoneNumber</label>
                                <input type="text" class="form-control" name="PhoneNumber" id="txtPhoneNumber">
                            </div>
                        </div>

                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" class="form-control" name="Email" id="txtEmail">
                            </div>
                        </div>


                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="btnUPdatePatient" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</div>




<script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
<script src="~/fertilitypoint/patient.js"></script>



<script type="text/javascript">
    $(document).ready(function() {
        $('#patients').DataTable();
    });
</script>





