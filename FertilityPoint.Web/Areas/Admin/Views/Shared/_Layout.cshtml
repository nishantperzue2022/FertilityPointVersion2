    ul li a:hover {
        background: #f8f8f8;
        color: #515151;
    }

    ul li a .fa {
        width: 16px;
        text-align: center;
        margin-right: 5px;
        float: right;
    }


    ul li ul li a:hover {
        background: #ebebeb;
        border-left: 4px solid #3498db;
    }

    .scrollStyle {
        max-height: 670px;
        overflow-y: scroll;
    }

</style>


<script>
    $('.sub-menu ul').hide();
    $(".sub-menu a").click(function() {
        $(this).parent(".sub-menu").children("ul").slideToggle("100");
        $(this).find(".right").toggleClass("fa-caret-up fa-caret-down");
    });
</script>