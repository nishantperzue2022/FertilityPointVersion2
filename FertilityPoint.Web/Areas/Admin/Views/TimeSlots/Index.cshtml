@model IEnumerable<FertilityPoint.DTO.TimeSlotModule.TimeSlotDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}


<link href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet">


<body>
    <div class="page-wrapper" style="min-height: 754px;background-color: #f8f9fa;">
        <div class="content container-fluid">

            <div class="row">
                <div class="col-sm-3 col-auto">
                    <h3 class="page-title">List of Time Slots</h3>
                </div>
                <div class="col-md-9">
                    <button type="button" class="btn btn-success btn-sm  pull-right" data-toggle="modal" data-target="#modalTimeSlot" data-backdrop="static" data-keyboard="false"><i class="fa fa-plus-circle"></i>  </button>
                </div>
            </div>

            <div class="card">
                <div class="card-body">

                    <table id="timeslots" class="table table-sm">
                        <thead>
                            <tr>
                                <th>SN.</th>
                                <th>From</th>
                                <th>To</th>
                                <th>Appointment Date</th>
                                <th>Status</th>
                                <th>Create Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (Model != null && Model.Count() > 0)
                            {
                                int count = 1;
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@count</td>

                                        <td>@item.FromTime.ToString("h:mm tt")</td>

                                        <td>@item.ToTime.ToString("h:mm tt")</td>

                                        <td>@item.AppointmentDate.ToShortDateString()</td>

                                        <td>
                                            @{
                                                var status = item.IsBooked;

                                                if (status == 0)
                                                {
                                                    <span class="activeUser ">Available</span>
                                                }
                                                else
                                                {
                                                    <span class="disabledUser ">Booked</span>
                                                }
                                            }
                                        </td>

                                        <td>@item.CreateDate.ToShortDateString()</td>

                                        <td>
                                            <a class="btn btn-sm btn-success" href="#" onclick="GetTimeSlot('@item.Id')" value="">Edit</a>
                                            <a class="btn btn-sm btn-danger" href="#" onclick="DeleteRecord('@item.Id')" value="">Delete</a>
                                        </td>
                                    </tr>

                                    count++;
                                }
                            }

                        </tbody>

                    </table>


                </div>
            </div>
        </div>

    </div>

    <div class="modal fade" id="modalTimeSlot" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Create Time Slot</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="frmTimeSlot">
                        <div class="row form-row">
                            <div class="col-12 col-sm-12">


                                <div class="col-12 col-sm-12">


                                    <div class="form-group">
                                        <label>Appointment Date</label>
                                        <input type="date" class="form-control" value='@DateTime.Now.ToString("yyyy-MM-dd")' name="AppointmentDate" id="txtAppointmentTime">
                                    </div>

                                    <div class="form-group">
                                        <label>Time From</label>
                                        <input type="time" class="form-control" name="FromTime" id="txtFromTime">
                                    </div>

                                    <div class="form-group">
                                        <label>Time To</label>
                                        <input type="time" class="form-control" name="ToTime" id="txtToTime">
                                    </div>
                                </div>


                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" id="btnSubmit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="modalTimeSlotUpdate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabelUpdate" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edit Time Slots</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="frmEditTimeSlot">

                        <div class="row form-row">

                            <input type="hidden" class="form-control" name="Id" id="txtId">

                            <div class="col-12 col-sm-12">
                                <div class="form-group">
                                    <label>Time From</label>
                                    <input type="time" class="form-control" name="FromTime" id="txtFromTime1">
                                </div>

                                <div class="form-group">
                                    <label>Time To</label>
                                    <input type="time" class="form-control" name="ToTime" id="txtToTime1">
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" id="btnEdit" class="btn btn-primary">Update</button>
                </div>
            </div>
        </div>
    </div>

</body>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
<script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
<script src="~/fertilitypoint/timeslot.js"></script>



<script type="text/javascript">
    $(document).ready(function() {
        $('#timeslots').DataTable();
    });
</script>




