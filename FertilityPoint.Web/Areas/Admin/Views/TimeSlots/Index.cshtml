@{
    ViewData["Title"] = "CreatePayment";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="page-wrapper" style="min-height: 754px;background-color: #f8f9fa;">
        <div class="content container-fluid">

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header" style="background-color: #263b6b;color: #fff;">
                        <div class="card-title" style="font-weight:bold;">Create Time Slots</div>
                    </div>
                    <div class="card-body">

                        <div class="container">
                            <div class="clear">

                                <div style="display:none;" id="dvError">
                                    <div class="alert alert-danger" role="alert">
                                        <h6 id="info"></h6>
                                    </div>
                                </div>

                                <div style="display:none;" id="dvSuccess">
                                    <div class="alert alert-success" role="alert">
                                        <h6 id="passwordChangeSuccess"></h6>
                                    </div>
                                </div>
                                <form id="frmCreatPayment">

                                    <div class="row">

                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="exampleDataList" class="form-label">Select Appointment Date</label>
                                                <input type="date" name="TransactionId" id="txtAppointmentDate" class="form-control" />
                                            </div>
                                        </div>

                                    </div>

                                    <hr />

                                    <div class="col-md-3  pull-right">
                                        <div class="form-group row">
                                            <input type="button" onclick="OpenSlotsPage()" class="form-control btn btn-outline-primary" value="Next">
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>

<script>




    function ShowLoader() {

        $("#loadMe").modal('show');
    }

    function HideLoader() {

        $("#loadMe").modal('hide');
    }


    function HideError() {

        $('#dvError').delay(1000).hide(3000);
    }



    function OpenSlotsPage() {



        if ($('#txtAppointmentDate').val() == '') {

            $('#txtAppointmentDate').focus();

            $("#dvError").show();

            $("#info").text("Appointment Date is a required field");

            HideError();

            return false;
        }




        ShowLoader();

        var appointmentDate = $('#txtAppointmentDate').val();


        window.location.href = "/Admin/TimeSlots/CreateSlots/?AppointmentDate=" + appointmentDate;

    }




</script>
