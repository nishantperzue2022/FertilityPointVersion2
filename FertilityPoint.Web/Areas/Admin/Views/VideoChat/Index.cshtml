@model FertilityPoint.DTO.PatientModule.PatientDTO

@{
    ViewData["Title"] = "Video";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/chat/video/css/webrtc.css" type="text/css" />
<body>
    <div class="page-wrapper" style="min-height: 754px;">

        <div class="content container-fluid">

            <div class="row">
                <div class="col-md-12">
                    <div class="profile-header">
                        <div class="row align-items-center">
                            <div class="col-auto profile-image">
                                <a href="#">
                                    <img class="rounded-circle" alt="User Image" src="/dashboard/assets/img/profiles/avatar-01.jpg">
                                </a>
                            </div>
                            <div class="col ml-md-n2 profile-user-info">
                                <h4 class="user-name mb-0">@Model.FullName</h4>
                                <input type="hidden" id="roomNameTxt" value="@Model.FullName" />
                                <h6 class="text-muted">@Model.Email</h6>
                                <h6 class="text-muted">@Model.PhoneNumber</h6>
                            </div>
                            <div class="col-auto profile-btn">
                                <button id="createRoomBtn" class="btn btn-outline-primary"><i class="fe fe-video"> Make a call</i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



            <div class="mt-2">
                <div class="connectionStatus">
                    <p id="connectionStatusMessage"></p>
                </div>
            </div>


            <div style="display:none;">

                <div id="fileShare">
                    <input type="file" id="fileInput">
                    <button id="sendFileBtn" class="sendFileBtn">Send</button>
                </div>
                <table id="roomTable" class="display" style="width:100%;">
                    <thead>
                        <tr>
                            <th>Room ID</th>
                            <th>Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>


            <div class="videoArea row">

                <div class="col-md-6">

                    <video id="localVideo" autoplay playsinline></video>


                </div>

                <div class="col-md-6">

                    <video id="remoteVideo" autoplay playsinline></video>
                </div>



                <div class="col-lg-12 mt-3">

                    <input type="text" name="PatientId" value="@Model.Id" />

                    <h6>
                        Remarks
                    </h6>
                    <div>
                        <textarea class="form-control" style="height:5em;" id="txtDoshComment" name="DoshComment"></textarea>
                    </div>

                    <div class="pull-right mt-2">
                        <button type="button" id="btnSubmitRemark" class="btn btn-primary btn-sm">Submit</button>
                    </div>
                </div>



            </div>



        </div>


    </div>
</body>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>


<script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
<script type="text/javascript" src="https://webrtc.github.io/adapter/adapter-latest.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="~/chat/video/js/webrtc.js"></script>

